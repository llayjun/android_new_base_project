<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.base.base.baseui.widget.view.LineEditText
        android:id="@+id/line_et"
        style="?android:attr/textViewStyle"
        android:layout_width="0pt"
        android:layout_height="wrap_content"
        android:background="@color/color_transparent"
        android:hint="获取您的手机验证码"
        android:maxLength="10"
        android:maxLines="1"
        android:paddingBottom="30pt"
        android:paddingTop="30pt"
        android:textColor="@color/color_000000"
        android:textColorHint="@color/color_cccccc"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.base.base.baseui.widget.view.CountDownTextView
        android:id="@+id/count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10pt"
        android:text="发送验证码"
        app:layout_constraintBottom_toBottomOf="@id/line_et"
        app:layout_constraintEnd_toEndOf="@+id/line_et"
        app:layout_constraintTop_toTopOf="@id/line_et" />

</android.support.constraint.ConstraintLayout>